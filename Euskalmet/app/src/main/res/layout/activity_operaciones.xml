<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityOperaciones">


    <Button
        android:id="@+id/Operac_btnMunicipios"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="225dp"
        android:layout_height="66dp"
        android:background="@drawable/button_custom_green"
        app:backgroundTint="@null"
        android:text="@string/txt_Municipios"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261" />

    <Button
        android:id="@+id/Operac_btnEspacios"
        android:layout_width="225dp"
        android:layout_height="66dp"
        android:background="@drawable/button_custom_green"
        android:text="@string/txt_EspaciosNaturales"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.434" />

    <Button
        android:id="@+id/Operac_btnTop"
        android:layout_width="225dp"
        android:layout_height="66dp"
        android:background="@drawable/button_custom_green"
        android:text="@string/txt_Ranking"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.593" />

    <Button
        android:id="@+id/Operac_btnFavs"
        android:layout_width="225dp"
        android:layout_height="66dp"
        android:background="@drawable/button_custom_green"
        android:text="@string/txt_Favoritos"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.771" />

    <Button
        android:id="@+id/Operac_changeLang"
        android:layout_width="117dp"
        android:layout_height="74dp"
        android:background="@drawable/button_custom_green"
        android:text="@string/txt_ChangeLang"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

</androidx.constraintlayout.widget.ConstraintLayout>